<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Lab Technician Edit Reservation</title>
  <link rel="stylesheet" href="/css/lab_technician_edit.css"/>

  <!-- Bootstrap -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>
  <div class="container-fluid p-0">
    <div class="row g-0">

      <!-- Side Panel -->
      <div class="col-lg-3 col-md-4">
        <div class="side-panel">
          <h1 class="side-panel-title">ReserveALab</h1>

          <div class="user-account-buttons">
            <a href="/user-login">
              <button type="button" class="btn btn-custom">Logout</button>
            </a>
            <a href="/view-slots">
              <button type="button" class="btn btn-custom">View Available Slots</button>
            </a>
          </div>

          <nav>
            <ul class="nav-links">
              <li><a href="/technician?techId={{techId}}">Technician Homepage</a></li>
            </ul>
          </nav>
        </div>
      </div>

      <!-- Main Content -->
      <div class="col-lg-9 col-md-8">
        <div class="hero-container">
          <section class="mb-5">
            <h2 class="hero-title">Edit Reservation</h2>

            <form method="POST" action="/technician/edit?techId={{techId}}" class="edit-form">

              <div class="form-group">
                <label for="reservationId">Reservation ID</label>
                <input type="text" id="reservationId" name="reservationId" placeholder="Enter reservation ID" required>
              </div>

              <div class="form-group">
                <label for="laboratory">New Laboratory</label>
                <select id="laboratory" name="laboratory" required>
                  <option value="G301">G301</option>
                  <option value="G302">G302</option>
                  <option value="G303">G303</option>
                  <option value="G304">G304</option>
                  <option value="G305">G305</option>
                </select>
              </div>

              <div class="form-group">
                <label for="seat_number">New Seat Number</label>
                <input type="number" id="seat_number" name="seat_number" min="1" max="35" required>
              </div>

              <div class="form-group">
                <label for="reservation_date">New Reservation Date</label>
                <input type="date" id="reservation_date" name="reservation_date" required>
              </div>

              <button type="submit" class="btn btn-primary">Submit Changes</button>
            </form>

            <div>
              <h3>Your Reservations</h3>
              <ul>
                {{#each reservations}}
                  <li>
                    {{laboratory}} - {{reservation_date}} - {{time_slot}} - Seat {{seat_number}}
                    <a href="/technician/edit/{{_id}}?techId={{../techId}}">Edit</a>
                  </li>
                {{/each}}
              </ul>
            </div>
          </section>
        </div>
      </div>

    </div>
  </div>
</body>
</html>
