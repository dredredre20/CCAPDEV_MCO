<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Lab Slot Availability</title>
  <link rel="stylesheet" href="/css/view-availability-design.css"/>
</head>

<body>
  <nav class="navbar">
    <a class="navbar-brand" href="/">ReserveALab</a>
  </nav>

  <div class="container">
    <h2>View Lab Slot Availability</h2>

    <form id="view-slots-form" method="GET" action="/reservations/availability">
      <div class="form-row">
        <div class="form-group">
          <label for="lab">Laboratory</label>
          <select id="lab" name="lab" required>
            <option value="G301">G301</option>
            <option value="G302">G302</option>
            <option value="G303">G303</option>
            <option value="G304">G304</option>
            <option value="G305">G305</option>
          </select>
        </div>

        <div class="form-group">
          <label for="time">Time Slot</label>
          <select id="time" name="time">
            <option value="">All Times</option>
            <option value="08:00">08:00 - 08:30</option>            
            <option value="08:30">08:30 - 09:00</option>            
            <option value="09:00">09:00 - 09:30</option>            
            <option value="09:30">09:30 - 10:00</option>            
            <option value="10:00">10:00 - 10:30</option>            
            <option value="10:30">10:30 - 11:00</option>            
            <option value="11:00">11:00 - 11:30</option>            
            <option value="11:30">11:30 - 12:00</option>            
            <option value="12:00">12:00 - 12:30</option>            
            <option value="12:30">12:30 - 01:00</option>          
            <option value="01:00">01:00 - 01:30</option>              
          </select>
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          <input type="date" id="date" name="date" required />
        </div>

        <div class="form-group">
          <button type="submit">View Availability</button>
        </div>
      </div>
    </form>

    <div class="return-btn-container">
      <a href="/" class="return-btn">Return to Home</a>
    </div>

    <div class="grid-container">
      <div class="grid-header">
        <div>Seat #</div>
        <div>Status</div>
        {{#if time}}
          <div>Time Slot</div>
        {{/if}}
        <div>Reserved By</div>
      </div>
      <div class="grid-body" id="slotsContainer">
        {{#if slots.length}}
          {{#if time}}
            <!---->
            {{#each slots}}
              <div class="grid-row {{#if reserved}}reserved{{else}}available{{/if}}">
                <div class="seat-number">#{{this.seat_number}}</div>
                <div class="status">
                  {{#if this.reserved}}
                    <span class="status-badge reserved">Reserved</span>
                  {{else}}
                    <span class="status-badge available">Available</span>
                  {{/if}}
                </div>
                <div class="time-slot">
                  {{#if this.reserved}}{{this.time_slot}}{{else}}-{{/if}}
                </div>
                <div class="reserved-by">
                  {{#if this.reserved}}
                    {{#if this.anonymous}}
                      <span class="anonymous">Anonymous</span>
                    {{else}}
                      {{this.name}}
                    {{/if}}
                  {{else}}
                    -
                  {{/if}}
                </div>
              </div>
            {{/each}}
          {{else}}
            {{!-- All times view --}}
            {{#each slots}}
              <div class="grid-row {{#if reserved}}reserved{{else}}available{{/if}}">
                <div class="seat-number">#{{this.seat_number}}</div>
                <div class="status">
                  {{#if this.reserved}}
                    <span class="status-badge reserved">Reserved</span>
                  {{else}}
                    <span class="status-badge available">Available</span>
                  {{/if}}
                </div>
                <div class="reservation-details">
                  {{#if this.reserved}}
                    <div class="reservation-list">
                      {{#each this.reservations}}
                        <div class="reservation-item">
                          <span class="time-slot">{{this.time_slot}}</span>
                          <span class="reserved-by">
                            {{#if this.anonymous}}
                              <span class="anonymous">Anonymous</span>
                            {{else}}
                              {{this.name}}
                            {{/if}}
                          </span>
                        </div>
                      {{/each}}
                    </div>
                  {{else}}
                    <div class="no-reservation">-</div>
                  {{/if}}
                </div>
              </div>
            {{/each}}
          {{/if}}
        {{else}}
          <div class="no-results">
            <p>No seats found. Try changing your filters.</p>
          </div>
        {{/if}}
      </div>
    </div>


  </div>

  <!-- view slots script -->
   <script src="/js/view-slots.js"></script>


</body>
</html>